@model WebApplication1.Dtos.PaymentDto

@{
    ViewData["Title"] = "TwintPayment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content -->

    <div class="container-fluid flex-grow-1 ">
        <div class="row">
            <div class="col-md-12">

                <div class="card mb-4 py-3 text-center">
                    <h3 class="mb-0" style="font-weight: 800;">
                        Order-Nr.: #111111
                       
                    </h3>
                </div>

            </div>
            <form asp-controller="OrderActivity" asp-action="TwintPayment">

                <div class="row" style="display: flex;align-items: center;justify-content: center;">

                    
                    <div class="col-md-6" style="margin-top: 70px;">

                        <div class="bg-label-primary p-4 shadow-lg">
                            <div class=" my-5">
                                <div class="row p-2">
                                    <div class="col-md-12 d-flex justify-content-center">
                                        <h3 style="font-weight: 800; color:aliceblue">
                                            Thank you for your payment...
                                        </h3>
                                    </div>


                                </div>

                            </div>
                            <div class="d-flex justify-content-center my-5">
                                <input type="submit" value="CHF @ViewBag.Price Confirm" class="btn btn-primary px-5 mx-3" style="font-size:20px" />

                            </div>
                            <div>
                            </div>
                        </div>

                        <div class="px-5">

                            <div class="butttons d-flex justify-content-center mt-5">
                                <a asp-controller="Products" asp-action="Index" class="btn btn-danger px-5 " style="font-size:20px">Cancel </a>
                            </div>
                        </div>



                    </div>


                </div>

            </form>
        </div>
    </div>
    <!-- / Content -->
</div>
