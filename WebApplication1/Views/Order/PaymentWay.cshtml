@model WebApplication1.Dtos.PaymentWayDto
@{
    ViewData["Title"] = "PaymentWay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content -->

    <div class="container-fluid flex-grow-1 ">
        <div class="row">
            <div class="col-md-12">

                <div class="card mb-4 py-3 text-center">
                    <h3 class="mb-0" style="font-weight: 800;">
                       Order-Nr.: #111111
                       

                    </h3>
                </div>

            </div>
            <form asp-controller="Order" asp-action="PaymentWay">

                <div class="row">
                    <div class="col-md-6 ">
                        <div class="shadow-lg p-5">
                            <div>
                                <h4 class="mb-0" style="color:white">
                                    Please pay for the selected order
                                </h4>
                                <div class="card my-4 py-3 text-center text-primary">
                                    <h3 class="mb-0" style="font-weight: 800;">
                                        Die Gesamtsumme: CHF  @ViewBag.TotalPrice
                                    </h3>
                                </div>
                            </div>

                            <div class="credits">
                                <div>
                                    <h4 class="mt-5" style="color:white">
                                        Please choose a payment method!
                                    </h4>
                                </div>
                                <div class="col-md">

                                    <div class="align-items-lg-center d-flex form-check my-4">
                                        <input class="form-check-input" type="radio" asp-for="PaymentWay" value="VISA" checked="">
                                        <label asp-for="PaymentWay" class="form-check-label"> <img src="~/Dashboard/assets/img/Visa_Konto.png" class="h-px-50 mx-3" /> </label>
                                    </div>
                                    <div class="align-items-lg-center d-flex form-check my-4">
                                        <input asp-for="PaymentWay" value="Twint" class="form-check-input" type="radio">
                                        <label asp-for="PaymentWay" class="form-check-label"> <img src="~/Dashboard/assets/img/Twint_Konto.png" class="h-px-50 mx-3" /> </label>
                                    </div>
                                    <div class="align-items-lg-center d-flex form-check my-4">
                                        <input asp-for="PaymentWay" value="PostFinance" class="form-check-input" type="radio">
                                        <label asp-for="PaymentWay" class="form-check-label"> <img src="~/Dashboard/assets/img/Post_Konto.png" class="h-px-50 mx-3" /> </label>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 ">

                        <div class="px-5">
                            <div class="d-flex justify-content-center  d-none d-md-block">
                                <img src="~/Dashboard/assets/img/AGB.png" />
                            </div>

                            <div class="col-md mt-5">

                                <div class="form-check mt-3">
                                    <input class="form-check-input" type="checkbox" id="termsCheckbox">
                                    <label class="form-check-label" for="defaultCheck1" style="font-size: 20px;font-weight: 600;color:aliceblue">
                                        I have read and agree to the general terms and conditions for purchasing inquiries online via WeDo2024s
                                    </label>
                                </div>

                            </div>

                            <div class="butttons d-flex justify-content-center mt-5">
                                <a asp-controller="Products" asp-action="Index" class="btn btn-danger px-5 " style="font-size:20px">Cancel</a>
                                <input type="submit" disabled id="submitButton" value="Next" class="btn btn-primary px-5 mx-3" style="font-size:20px" />
                            </div>
                        </div>



                    </div>


                </div>
            </form>
        </div>
    </div>
    <!-- / Content -->
</div>

<script>
    // Get references to the checkbox and submit button
    const termsCheckbox = document.getElementById('termsCheckbox');
    const submitButton = document.getElementById('submitButton');

    // Add event listener to the checkbox
    termsCheckbox.addEventListener('change', function () {
        // Enable the submit button if the checkbox is checked
        submitButton.disabled = !this.checked;
    });
</script>
